<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.fastchat.fastchat.MainActivity$PlaceholderFragment">

	<TextView
	    android:id="@+id/label_username"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/text_username"
	    android:layout_alignParentLeft="true"
	    android:text="@string/username"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/label_password"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/text_password"
	    android:layout_alignLeft="@+id/label_username"
	    android:text="@string/password"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<EditText
	    android:id="@+id/text_password"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/login_button"
	    android:layout_below="@+id/text_username"
	    android:layout_marginTop="18dp"
	    android:ems="10"
	    android:inputType="textPassword" />

	<Button
	    android:id="@+id/registration_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/login_button"
	    android:layout_alignBottom="@+id/login_button"
	    android:text="@string/register" />

	<EditText
	    android:id="@+id/text_username"
	    android:inputType="text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/text_password"
	    android:layout_alignParentTop="true"
	    android:layout_alignRight="@+id/text_password"
	    android:layout_marginTop="46dp"
	    android:ems="10" />

	<Button
	    android:id="@+id/login_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/text_password"
	    android:layout_marginLeft="40dp"
	    android:layout_marginTop="23dp"
	    android:layout_toRightOf="@+id/registration_button"
	    android:text="@string/login" />

</RelativeLayout>